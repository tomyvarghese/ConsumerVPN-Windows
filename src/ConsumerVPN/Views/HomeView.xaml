<UserControl x:Class="WLVPN.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:controls="clr-namespace:WLVPN.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WLVPN.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="550"
             d:DesignWidth="750"
             Background="{DynamicResource ContentBackgroundBrush}"
             mc:Ignorable="d">
    <Grid>

        <controls:TransitioningContentControl x:Name="ActiveItem"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              Focusable="False"
                                              cal:View.Context="{Binding ConnectedState, Mode=TwoWay}"
                                              cal:View.Model="{Binding}" />



    </Grid>
</UserControl>
